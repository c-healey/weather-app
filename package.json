{
  "name": "weather",
  "version": "1.0.0",
  "description": "weaher project",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/card.scss css/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass sass/card.scss css/style.css",
    "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" css/style.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css copy2docs",
    "copy2docs": "copyfiles index.html css/style.css script.js css/fonts/** img/** docs"
  },
  "author": "Catherine Healey",
  "license": "ISC",
  "dependencies": {
    "node-sass": "^4.12.0"
  },
  "devDependencies": {
    "autoprefixer": "^9.6.1",
    "concat": "^1.0.3",
    "copyfiles": "^2.1.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3"
  }
}
